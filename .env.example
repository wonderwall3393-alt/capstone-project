# Flask Configuration
FLASK_APP=hybrid_ml_survey_server.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
CORS_ORIGINS=https://sphinxnet.nexawebs.com,http://localhost:3000

# Database Configuration
DATABASE_URL=sqlite:///data/telco_users.db
DB_NAME=telco_users.db

# SSL Configuration (for Coolify)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Domain Configuration
DOMAIN=sphinxnet.nexawebs.com

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Model Configuration
MODEL_PATH=backend/model_telco_recommendation_new.pkl
MODEL_VERSION=2.0

# Performance Configuration
WORKERS=4
MAX_CONNECTIONS=1000
KEEP_ALIVE=2

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Email Configuration (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@sphinxnet.nexawebs.com